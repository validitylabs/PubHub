  "version": "0.2.0",
  "configurations": [
    {
      "name": "Docker: Attach to Node",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "address": "localhost",
      "protocol": "inspector",
      "sourceMaps": true,
      "localRoot": "${workspaceFolder}/applications/api",
      "remoteRoot": "/srv/applications/api",
      "outFiles": ["${workspaceFolder}/applications/api/build/**/*.js"],
      "skipFiles": ["<node_internals>/**/*.js"]
    }
  ]
}
