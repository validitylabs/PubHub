{
    "compilerOptions": {
        "module": "commonjs",
        "lib": ["es2017"],
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es6",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./"
    },
    "exclude": ["node_modules"]
}
